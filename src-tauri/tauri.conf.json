{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Gemini",
    "version": "0.1.0",
    "identifier": "com.ga403ww.gemini",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Gemini",
                "label": "main",
                "width": 420,
                "height": 900,
                "resizable": false,
                "decorations": false,
                "transparent": false,
                "alwaysOnTop": true,
                "skipTaskbar": false,
                "visible": false
            },
            {
                "title": "Gemini",
                "label": "normal",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "decorations": true,
                "visible": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
